<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="editor" controller="gui.EditorScreenController">
        <layer id="layer" padding="20" childLayout="center">
            <panel id="parts-panel" style="custom-panel" height="470" width="470" align="left" valign="top" childLayout="center">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="200" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="top" length="200" startDelay="0" inherit="true"/>
                </effect>
                <panel id="type-selection" padding="10,10,28,10" height="50" width="470" valign="top" childLayout="absolute">
                    <control name="select-button" label="Cockpit" id="cockpit-select-button" width="86px" height="50px" x="10px" y="0px"> 
                        <interact onClick="selectCockpit()"/>                       
                    </control>
                    <control name="select-button" label="Armor" id="armor-select-button" width="86px" height="50px" x="96px" y="0px">  
                        <interact onClick="selectArmor()"/>                      
                    </control>
                    <control name="select-button" label="Thruster" id="thruster-select-button" width="86px" height="50px" x="182px" y="0px">
                        <interact onClick="selectThruster()"/>                        
                    </control>
                    <control name="select-button" label="Weapon" id="weapon-select-button" width="86px" height="50px" x="268px" y="0px">      
                        <interact onClick="selectWeapon()"/>                  
                    </control>
                    <control name="select-button" label="Energy" id="energy-select-button" width="86px" height="50px" x="354px" y="0px">    
                        <interact onClick="selectEnergy()"/>                    
                    </control>
                </panel>
                <panel id="parts-container" padding="38,10,28,10" height="370" width="470" childLayout="absolute">
                </panel>
            </panel>
            <panel id="main-panel" style="custom-panel" height="390px" width="470px" align="left" valign="bottom" childLayout="vertical">
                <effect>
                    <onStartScreen name="move" mode="in" direction="left" length="200" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="left" length="200" startDelay="0" inherit="true"/>
                </effect>
                <panel childLayout="center">
                    <control name="button" label="Map" id="map-button" style="custom-button-top" width="100%" height="100%">
                        <interact onClick="switchToMap()"/>
                    </control>
                </panel>
                <panel childLayout="center">
                    <control name="button" label="Shop" id="shop-button" style="custom-button-middle" width="100%" height="100%">
                        <interact onClick="switchToShop()"/>
                    </control>
                </panel>
                <panel childLayout="center">
                    <control name="button" label="Ship Builder" id="ship-builder-button" style="custom-button-middle" width="100%" height="100%">
                        <interact onClick="switchToShipBuilder()"/>
                    </control>
                </panel>
                <panel childLayout="center">
                    <control name="button" label="Exit" id="exit-button" style="custom-button-bottom" width="100%" height="100%">
                        <interact onClick="exitMenu()"/>
                    </control>
                </panel>
            </panel>
            <panel id="ship-panel" style="custom-panel" height="100%" width="900px" align="right" valign="center" childLayout="center" padding="38,7,29,7">
                <effect>
                    <onStartScreen name="move" mode="in" direction="right" length="200" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="right" length="200" startDelay="0" inherit="true"/>
                </effect>
                <panel id="clip-container" childClip="true" height="100%" width="100%"childLayout="center" >
                    <panel id="slots-container" childLayout="absolute" width="100" height="100">
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
